{
  "manifest_version": 3,
  "name": "Hassas Otomatik Kaydırma",
  "version": "1.0",
  "description": "Orta tuşa basınca, belirlenen hızda otomatik kaydırma yapar.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scroller.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "48": "icon48.png" 
}
}